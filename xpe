def is_palindrome(s):
    s = s.lower()  # Convert the string to lowercase for case-insensitive comparison
    s = ''.join(char for char in s if char.isalnum())  # Remove non-alphanumeric characters
#test
    return s == s[::-1]
dvc or BBd
# Example usage
user_input = input("Now Enter a string to check if it's a palindrome: ")

if is_palindrome(user_input):
    print(f"{user_input} is a palindrome.")
else:
    print(f"{user_input} is not a palindrome.")

